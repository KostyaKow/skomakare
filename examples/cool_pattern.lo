(load "graphics.lo")

(define f (lambda (n rot)
   (if (= n 0) "done"
      (do (define shape (c red))
          (define new_rot (+ rot 0.1))
          (rotate shape new_rot)
          (f (- n 1) new_rot)))))

(f 500 0)

